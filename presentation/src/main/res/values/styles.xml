<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryDark">@color/yellow_800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <!-- Preference setting -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:listPreferredItemHeight">@dimen/config_height</item>
        <!-- Preference setting end -->
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryDark">@color/yellow_800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:buttonStyle">@style/MyMaterialTheme.Base.Button</item>-->
    </style>

    <style name="MyMaterialTheme.Base.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/custom_button_positive</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyMaterialTheme.Base.ButtonNegative" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/custom_button_negative</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyMaterialTheme.Base.ButtonFlat" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyMaterialTheme.Base.ButtonTextColor" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textColor">@color/button_black_state</item>
        <item name="android:radius">@dimen/dimen_16dp</item>
    </style>

    <style name="MyMaterialTheme.Base.TextTitle" parent="android:Widget.TextView">
        <item name="android:paddingBottom">@dimen/list_title_textPadding</item>
        <item name="android:textSize">@dimen/list_title_textSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyMaterialTheme.Base.TextButton" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/list_title_textSize</item>
        <item name="android:textColor">@color/button_yellow_state</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyMaterialTheme.Base.TextNormal" parent="android:Widget.TextView">
        <item name="android:paddingBottom">@dimen/list_title_textPadding</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyMaterialTheme.Base.ImageButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MyMaterialTheme.Base.ButtonColor" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/dimen_24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyMaterialTheme.Base.SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyMaterialTheme.Base.SpinnerDropdownItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="ThemeOverlay.MaterialSheetFab.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlHighlight">@color/yellow_300</item>
        <item name="colorControlActivated">@color/basic_black</item>
    </style>

    <style name="ThemeOverlay.MaterialSheetFab.ActionBar.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MaterialSheetFab.ToolBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialSheetFab.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialSheetFab.ActionBar.Popup</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation</item>
        <!--<item name="layout_scrollFlags">scroll|enterAlways</item>-->
    </style>

    <style name="Widget.MaterialSheetFab.TabLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialSheetFab.ActionBar</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/toolbar_elevation</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference
        </item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="RadioButtonThemeWhite" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/custom_radio_theme_white</item>
        <item name="android:button">@null</item>
    </style>

    <style name="RadioButtonThemeBrown" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/custom_radio_theme_brown</item>
        <item name="android:button">@null</item>
    </style>

    <style name="RadioButtonThemeBlack" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/custom_radio_theme_black</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
