<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/grid_recycler_view_padding"
    android:paddingRight="@dimen/grid_recycler_view_padding">

    <EditText
        android:id="@+id/etPurchaseSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/btnPurchaseSearch"
        android:hint="@string/purchase_search_hint"
        android:maxLines="1"
        android:textSize="@dimen/action_text_size"
        android:singleLine="true"
        android:textColorHint="@android:color/darker_gray"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/btnPurchaseSearch"
        style="@style/MyMaterialTheme.Base.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_search_black_24dp" />
</RelativeLayout>

