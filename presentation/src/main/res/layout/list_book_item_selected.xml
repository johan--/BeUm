<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/red_300"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ivBookCover"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="@android:dimen/thumbnail_height"
            android:padding="@dimen/grid_item_image_padding"
            android:src="@drawable/book_cover" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/grid_text_padding"
                android:paddingRight="@dimen/grid_text_padding"
                android:text="@string/__leak_canary_leak_list_title"
                android:textAlignment="center"
                android:textSize="@dimen/grid_default_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/grid_text_padding"
                android:paddingRight="@dimen/grid_text_padding"
                android:text="@string/__leak_canary_leak_list_title"
                android:textAlignment="center"
                android:textSize="@dimen/grid_default_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBookPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/grid_text_padding"
                android:paddingRight="@dimen/grid_text_padding"
                android:text="@string/__leak_canary_leak_list_title"
                android:textAlignment="center"
                android:textSize="@dimen/grid_default_font_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/selected_overlay"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red_400"
        android:visibility="visible" />
</LinearLayout><!--</android.support.v7.widget.CardView>-->