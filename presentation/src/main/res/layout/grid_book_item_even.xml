<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_padding"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBookName"
            style="@style/MyMaterialTheme.Base.TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grid_text_padding"
            android:paddingRight="@dimen/grid_text_padding"
            android:text="Alice's in Wonderland"
            android:textAlignment="center" />

    </LinearLayout>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/ivBookCover"
        android:layout_width="@dimen/grid_thumbnail_width"
        android:layout_height="@dimen/grid_thumbnail_height"
        android:padding="@dimen/grid_item_image_padding"
        android:src="@drawable/book_cover" />

    <View
        android:id="@+id/selected_overlay"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red_400"
        android:visibility="invisible" />
</LinearLayout>