<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ivBookCover"
            android:layout_width="@dimen/grid_thumbnail_width"
            android:layout_height="@dimen/grid_thumbnail_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/book_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_thumbnail_height"
            android:layout_toEndOf="@+id/ivBookCover"
            android:layout_toLeftOf="@+id/btnPurchaseDownload"
            android:layout_toRightOf="@+id/ivBookCover"
            android:layout_toStartOf="@+id/btnPurchaseDownload"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/grid_text_padding"
            android:paddingRight="@dimen/grid_text_padding">

            <TextView
                android:id="@+id/tvBookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="@string/__leak_canary_leak_list_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/grid_font_size_book_name" />

            <TextView
                android:id="@+id/tvBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/grid_text_padding"
                android:layout_marginTop="@dimen/grid_text_padding"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="@string/__leak_canary_leak_list_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/grid_font_size_book_author" />

            <TextView
                android:id="@+id/tvBookPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="@string/__leak_canary_leak_list_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/grid_font_size_book_publisher" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPurchaseDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            style="@style/MyMaterialTheme.Base.ButtonFlat"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/purchase_download" />
    </RelativeLayout>

    <View
        android:id="@+id/selected_overlay"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red_400"
        android:visibility="invisible" />
</LinearLayout><!--</android.support.v7.widget.CardView>-->