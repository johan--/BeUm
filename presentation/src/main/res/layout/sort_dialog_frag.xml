<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_padding_around_content_area"
        android:paddingRight="@dimen/dialog_padding_around_content_area"
        android:paddingTop="@dimen/dialog_padding_around_content_area">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/sample_text_title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_text_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="@dimen/library_frag_dialog_text_padding"
            android:text="@string/sample_text_subtitle"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_text_subtitle_size" />

    </LinearLayout>

    <!-- Bottom button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding_around_content_area">

        <Button
            android:id="@+id/btnSortTitle"
            style="@style/MyMaterialTheme.Base.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_weight="1"
            android:text="@string/dialog_button_sort_by_title" />

        <Button
            android:id="@+id/btnSortAuthor"
            style="@style/MyMaterialTheme.Base.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_weight="1"
            android:text="@string/dialog_button_sort_by_author" />

        <Button
            android:id="@+id/btnSortRead"
            style="@style/MyMaterialTheme.Base.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_weight="1"
            android:text="@string/dialog_button_sort_by_read" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/MyMaterialTheme.Base.ButtonNegative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_button_cancel" />
    </LinearLayout>
</LinearLayout>