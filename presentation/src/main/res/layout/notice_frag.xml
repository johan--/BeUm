<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="net.cosmiclion.opms.main.notice.NoticeFragment">



            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:padding="@dimen/notices_header_title_padding"
                android:text="@string/notice_header"
                android:textColor="@android:color/white"
                android:textSize="@dimen/notices_header_title_textSize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16dp">

                <TextView
                    android:id="@+id/tvNoticeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notice_header"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/notice_title_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNoticeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_24dp"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:text="@string/notice_body"
                    android:textSize="@dimen/notice_body_textSize" />

                <TextView
                    android:id="@+id/tvNoticeBack"
                    style="@style/MyMaterialTheme.Base.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notice_button"
                    android:textSize="@dimen/notice_prev_textSize" />
            </LinearLayout>
</LinearLayout>
